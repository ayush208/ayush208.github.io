             height: auto;
        } 
         .front {
            flex-wrap: wrap;    
        }
        .card-content {
            width: 100%;
        }
        .card-content img {
            max-height: 34px;
        }
        .card {
            height: auto;
        }
        .card form {
            padding-top: 25px;
            padding-right: 0;
        }
    }
    
    @media(max-width: 550px) {
        .back h3 {
             font-size: 22px; 
        }
    }
    
    @media(max-width: 500px) {
        .card {
            max-width: 80%;
        }
        .back .conv1 {
            display: block;
        }
     }
     
      @media(max-width: 500px) {
             .back h3 {
             font-size: 20px; 
        } 
      }
     
     
</style>
