<div id="card" class="card">
<div id="front" class="front">
<div class="card-content author ">
<img src="/storage/app/media/mail1.svg" alt="icon mail">
<form id="form-subscribe-andradedev" data-request="formSubscribe::onAddSubscriber" data-request-update="'formSubscribe::alert': '#result'" class="form">
<input id="email" type="email" name="email" placeholder="E-mail" class="form-control" value="" required>
</form>
</div>
<div class="card-action">
<button onclick="flip()" class="btn btn-primary btn-block" form="form-subscribe-andradedev" href="#">Subscribe to our news</button>
</div>
</div>
<div class="back">
<img class="conv1" src="/storage/app/media/conv1.svg" alt="icon mail">
<img class="conv2" src="/storage/app/media/conv2.svg" alt="icon mail">
<div class="circle1"></div>
<div class="circle2"><span onclick="unflip()">X</span></div>
<h3><div id="result">Thank you for Subscription!</div></h3>
</div>
</div>
<script>
    var card = document.getElementById('card');
    var input = document.getElementById('email');
   
     function flip() {
         if(input.value.indexOf('@') > 0 ) {
             input.classList.remove('error');
              card.classList.add('flip');
         } else {
           input.classList.add('error');
            }
        
    }
    
     function unflip() {
         card.classList.remove('flip');
        document.getElementById('email').value = "";
    }
    
</script>

